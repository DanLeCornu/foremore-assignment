<div class="flex flex-col gap-4">

  <p class="text-green-500"><%= notice %></p>

  <h1>Delivery <%= @delivery.id %></h1>

  <%= render @delivery %>

  <div class="flex gap-2">
    <%= link_to edit_delivery_path(@delivery) do %>
    <button class="btn-primary">Edit</button>
    <% end %>


    <%= button_to "Delete", @delivery, method: :delete, class: "btn-destroy" %>
  </div>

  <%= link_to "Back to deliveries", deliveries_path %>

</div>